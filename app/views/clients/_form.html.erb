<div class="container">
<%= form_with(model: client, class: "client-from", novalidate: true) do |form| %>

  <%client_form_errors(client) do%>
    <div class="alert alert-danger">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>
      <ul>
        <% client.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group my-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", required: true %>
    <div class="invalid-feedback">Please provide a name.</div>
  </div>


  <div class="form-group mt-3">
    <%= form.label :sub_domain, class: "form-label" %>
    <%= form.text_field :sub_domain, class: "form-control", required: true %>
    <div class="invalid-feedback">Please provide a sub domain.</div>
  </div>

  <div class="mt-3">
    <%= form.label :background_image %>
    <%= form.file_field :background_image, accept: 'image/*' %>
  </div>

  <div class="form-group form-check mt-3">
    <%= form.check_box :is_active, class: "form-check-input" %>
    <%= form.label :is_active, class: "form-check-label" %>
  </div>

  <div class="form-group mt-3">
    <%= form.submit "Save" ,class:"btn btn-primary btn-sm"%>
  </div>
<% end %>
</div>
