  <% end %>
</div>


<% @articles.each do |article| %>
  <%= render article %>
  <p>
    <%= link_to "Show Article", article_path(client_id: article.client.sub_domain, id: article.id), class: "btn btn-primary" %>
  </p>
<% end %>