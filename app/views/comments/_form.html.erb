<%= form_with model: Comment.new, class: "commentForm", local: true, url: article_comments_path(article.client.sub_domain, article.id) do |form| %>
  <div class="form-group">
    <%= form.label :body, "Your Comment" %>
    <%= form.text_area :body, class: "form-control", rows: 3 %>
  </div>
  <div class="form-group">
    <%= form.submit "Submit Comment", class: "btn btn-primary", id: "commentSubmit" %>
  </div>
<% end %>
